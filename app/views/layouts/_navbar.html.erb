<nav class="navbar">
  <div class="navbar-brand">
    <div class="navbar-item">
      <%= image_tag "logo2.svg", height: 40, alt: "Letterkenny dog logo", class: "filter-grey-dark" %>
    </div>
    <div class="navbar-burger burger" data-target="main-nav">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </div>
  </div>

  <div id="main-nav" class="navbar-menu">
    <div class="navbar-start is-active">
      <%= link_to root_url, class: "navbar-item" do %>
        <span class="icon">
          <i class="fas fa-home"></i>
        </span>
        <span>Home</span>
      <% end %>
      <%= link_to pages_about_url, class: "navbar-item" do %>
        <span class="icon">
          <i class="fas fa-info-circle"></i>
        </span>
        <span>About</span>
      <% end %>
      <% if current_user %>
        <%= link_to avo_url, class: "navbar-item" do %>
          <span class="icon">
            <i class="fas fa-toolbox"></i>
          </span>
          <span>Admin</span>
        <% end %>
      <% end %>
    </div>
    <div class="navbar-end is-active">
      <% if current_user %>
        <div class="navbar-item has-dropdown is-hoverable">
          <a class="navbar-link">
          <span>
            <%= avatar(current_user) %>
            </span>
            <span><%= current_user.name %><span>
          </a>

          <div class="navbar-dropdown">
            <%= link_to destroy_session_path, class: "navbar-item" do %>
              <span class="icon">
                <i class="fas fa-sign-out-alt"></i>
              </span>
              <span>Sign Out</span>
            <% end %>
          </div>
        </div>
      <% else %>
         <%= slack_sign_in_link proceed_to: create_session_url, class: "navbar-item slack-sign-in", data: { turbo: false } %>
      <% end %>
    </div>
  </div>
</nav>
